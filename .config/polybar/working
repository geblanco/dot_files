[colors]
	background = #222222
	foreground = #eefafafa
	foreground-alt = #66
	linecolor = #fba922

[bar/main]
	;override-redirect = true
	wm-restack = i3

	monitor = ${env:MONITOR}
	width = 100%
	height = 27

	background = ${colors.background}
	foreground = ${colors.foreground}

	spacing = 3
	lineheight = 2
	padding-right = 2
	module-margin-left = 1
	module-margin-right = 1

	font-0 = NotoSans-Regular:pixelsize=10;1
	font-1 = NotoSans-Regular:pixelsize=10;3
	font-2 = FontAwesome:pixelsize=12;1
	font-4 = MaterialIcons:size=10;-1

	modules-left = powermenu i3
	modules-right = volume separator backlight separator keyboard gmail pkg separator cpu memory separator battery separator date 
	; modules-right = volume separator backlight separator keyboard gmail pkg separator eth wlan separator cpu memory separator battery separator date powermenu

	tray-position = right
	tray-padding = 2

	tray-transparent = false
	underline-size = 3

[module/i3]
	type = internal/i3
	format = <label-state> <label-mode>
	pin-workspaces = true

	ws-icon-0 = 1;ÔÑ†
	ws-icon-1 = 3;‚ô´
	ws-icon-2 = 2;Ôâ®
	ws-icon-3 = 4;

	;ws-icon-2 = code;ÔÑ°
	
	;ws-icon-4 = irssi;ÔÅµ
	;ws-icon-0 = 1;ÔÑ†
	;ws-icon-1 = 2;Ôâ®
	;ws-icon-2 = 3;ÔÑ°
	;ws-icon-3 = music;ÔÄÅ
	;ws-icon-4 = 5;ÔÅµ

	ws-icon-default = Ôâ¨

	label-focused = %icon% %name%
	label-focused-foreground = #ffffff
	label-focused-background = #3f3f3f
	label-focused-underline = #fba922
	label-focused-padding = 2

	label-visible = %icon% %name%
	label-visible-underline = #555555
	label-visible-padding = 2

	label-unfocused = %icon% %name%
	label-unfocused-underline = #555555
	label-unfocused-padding = 2

	label-urgent = %icon% %name%
	label-urgent-foreground = #000000
	label-urgent-background = #bd2c40
	label-urgent-underline = #9b0a20
	label-urgent-padding = 2

[module/volume]
	type = internal/volume
	master-mixer = Master

	format-volume = <label-volume> <bar-volume>

	label-muted = Ôá∂
	label-muted-foreground = ${colors.foreground-alt}

	label-volume = ÔÄ®
	label-volume-foreground = ${colors.foreground}

	bar-volume-width = 10
	bar-volume-foreground-0 = #55aa55
	bar-volume-foreground-1 = #55aa55
	bar-volume-foreground-2 = #55aa55
	bar-volume-foreground-3 = #55aa55
	bar-volume-foreground-4 = #55aa55
	bar-volume-foreground-5 = #f5a70a
	bar-volume-foreground-6 = #ff5555
	bar-volume-gradient = false
	bar-volume-indicator = |
	bar-volume-indicator-font = 2
	bar-volume-fill = ‚îÄ
	bar-volume-fill-font = 2
	bar-volume-empty = ‚îÄ
	bar-volume-empty-font = 2
	bar-volume-empty-foreground = ${colors.foreground}

	mapping = true

[module/backlight]
  type = internal/backlight

  ; Use the following command to list available cards:
  ; $ ls -1 /sys/class/backlight/
  card = intel_backlight
  format = <ramp> <label>

  ; Available tokens:
  ;   %percentage% (default)
  label = %percentage%%

  ; Only applies if <ramp> is used
  ramp-0 = üåï
  ramp-1 = üåî
  ramp-2 = üåì
  ramp-3 = üåí
  ramp-4 = üåë

[module/keyboard]
	type = internal/xkeyboard
	
	blacklist-0 = num lock

	format-prefix = %{T2} ‚å® %{T-}
	label-layout = %{T2} %name% %{T-}
	label-indicator-padding = 2

[module/gmail]
	type = custom/script
	exec = $HOME/.config/polybar/gmail/launch.py --nosound
	exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"
	label-font = 2
	tail = true
	click-left = xdg-open https://mail.google.com

[module/pkg]
	type = custom/script
	interval = 1200
	format = <label>
	label = "%{T2} %output:0:30% %{T-}"
	exec = $HOME/.config/polybar/pkg.sh
	exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"

[module/separator]
	type = custom/text
	content = |
	content-padding = 2

[module/wlan]
  type = internal/network
  interface = wlp59s0
  interval = 3.0

  format-connected = <label-connected>
  label-connected = %essid% - %{F#99} %signal%% %{F-} - %{F#32CD32} %local_ip% %{F-}

  format-disconnected = 
  label-disconnected = %ifname% disconnected

[module/eth]
  type = internal/network
  interface = enp58s0f1
  interval = 3.0

  format-connected = <label-connected>
  label-connected = %essid% - %{F#99} %linkspeed% %{F-} - %{F#32CD32} %local_ip% %{F-}

  format-disconnected = 
  label-disconnected = %ifname% disconnected

[module/cpu]
	type = internal/cpu

	format = <label>
	label-font = 2
	label = CPU %{F#99} %percentage%% %{F-}

[module/memory]
	type = internal/memory

	format = <label>
	label-font = 2
	label = RAM %{F#99} %percentage_used%% %{F-}

[module/battery]
  type = internal/battery

  ; This is useful in case the battery never reports 100% charge
  full-at = 99

  ; Use the following command to list batteries and adapters:
  ; $ ls -1 /sys/class/power_supply/
  battery = BAT0
  adapter = AC

  ; If an inotify event haven't been reported in this many
  ; seconds, manually poll for new values.
  ;
  ; Needed as a fallback for systems that don't report events
  ; on sysfs/procfs.
  ;
  ; Disable polling by setting the interval to 0.
  ;
  ; Default: 5
  poll-interval = 5
  format-charging = <animation-charging> <label-charging>
  label-charging = %{F#32CD32} %percentage%% %{F-}

  animation-charging-0 = ÔâÑ
  animation-charging-1 = ÔâÉ
  animation-charging-2 = ÔâÇ
  animation-charging-3 = ÔâÅ
  animation-charging-4 = ÔâÄ
  ; Framerate in milliseconds
  animation-charging-framerate = 750

  format-discharging = <ramp-capacity> <label-discharging>
  label-discharging = %{F#99} %percentage%% %{F-}

  ramp-capacity-0 = ÔâÑ
  ramp-capacity-1 = ÔâÉ
  ramp-capacity-2 = ÔâÇ
  ramp-capacity-3 = ÔâÅ
  ramp-capacity-4 = ÔâÄ


[module/date]
	type = internal/date
	label-font = 2
	date = %%{F#fff}%Y-%m-%d%%{F-}  %%{F#99}%H:%M%%{F-}
	date-alt = %%{F#fff}%A, %d %B %Y  %%{F#fff}%H:%M%%{F#666}:%%{F#fba922}%S%%{F-}

[module/powermenu]
	type = custom/menu

	format-padding = 1

	label-open = ÔÄë
	label-close = ÔÑÖ
	label-separator = |

	menu-0-0 = %{T2} Terminate WM %{T-}
	menu-0-0-foreground = #fba922
	menu-0-0-exec = i3-msg exit

	menu-0-1 = %{T2} Reboot %{T-}
	menu-0-1-foreground = #fba922
	menu-0-1-exec = menu-open-1
	
	menu-0-2 = %{T2} Power off %{T-}
	menu-0-2-foreground = #fba922
	menu-0-2-exec = menu-open-2

	menu-1-0 = %{T2} Reboot %{T-}
	menu-1-0-foreground = #fba922
	menu-1-0-exec = reboot
	
	menu-1-1 = %{T2} Cancel %{T-}
	menu-1-1-foreground = #fba922
	menu-1-1-exec = menu-open-0

	menu-2-0 = %{T2} Power off %{T-}
	menu-2-0-foreground = #fba922
	menu-2-0-exec = poweroff
	
	menu-2-1 = %{T2} Cancel %{T-}
	menu-2-1-foreground = #fba922
	menu-2-1-exec = menu-open-0

